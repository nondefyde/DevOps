{
  "name": "stemuli-devops",
  "version": "1.0.0",
  "author": "Emmanuel Okafor",
  "description": "The comprehensive repository for my personal devOps scripts",
  "homepage": "https://github.com/nondefyde/DevOps#readme",
  "keywords": [
    "Devops"
  ],
  "license": "ISC",
  "dependencies": {
    "express": "^4.18.2"
  },
  "scripts": {
    "start": "node app/app.js",
    "secret:dev": "cd ./scripts && cat ../_env/env.yml | ./base64.sh",
    "secret:chv": "cd ./scripts && cat ../_env/chowville.yml | ./base64.sh",
    "secret:ksh": "cd ./scripts && cat ../_env/kassh.yml | ./base64.sh",
    "secret:stm": "cd ./scripts && cat ../_env/stm | ./base64.sh",
    "secret:rpa": "cd ./scripts && cat ../_env/getreepa.yml | ./base64.sh",
    "secret:qst": "cd ./scripts && cat ../_env/qst | ./base64.sh",

    "aws:clean:kube": "rm -rf ./terraform/aws/_state && rm -rf ./terraform/azure/**/.terraform",
    "aws:setup:kube": "cd ./terraform/aws/_scripts && ./setup.sh cloudstgdev us-west-2",
    "aws:prepare:kube": "cd ./terraform/aws/_scripts && ./prepare.sh kube cloudstgdev package.json",
    "aws:apply:kube": "cd ./terraform/aws/_scripts && ./apply.sh kube cloudstgdev",
    "aws:destroy:kube": "cd ./terraform/aws/_scripts && ./destroy.sh kube cloudstgdev",
    "aws:execute:kube": "yarn aws:setup:kube && yarn aws:prepare:kube && yarn aws:apply:kube",
    "aws:tear:kube": "yarn aws:destroy:kube",
    "aws:cicle:kube": "yarn aws:execute:kube && yarn aws:tear:kube",

    "azure:clean": "rm -rf ./terraform/azure/_state && rm -rf ./terraform/azure/**/.terraform",
    "azure:cleanup": "cd ./terraform/azure/_scripts && ./cleanup.sh centralus",
    "azure:setup": "cd ./terraform/azure/_scripts && ./setup.sh cloudstgdev centralus",
    "azure:destroy": "azure:destroy:vm && azure:destroy:mysql",


    "azure:prepare:vm": "cd ./terraform/azure/_scripts && ./prepare.sh vm cloudstgdev",
    "azure:apply:vm": "cd ./terraform/azure/_scripts && ./apply.sh vm cloudstgdev",
    "azure:destroy:vm": "cd ./terraform/azure/_scripts && ./destroy.sh vm cloudstgdev",
    "azure:execute:vm": "yarn azure:setup && yarn azure:prepare && yarn azure:apply:vm",
    "azure:tear:vm": "yarn azure:destroy:vm && yarn azure:cleanup:vm",
    "azure:cicle:vm": "yarn azure:execute:vm && yarn azure:tear:vm",

    "azure:prepare:mysql": "cd ./terraform/azure/_scripts && ./prepare.sh mysql cloudstgdev",
    "azure:apply:mysql": "cd ./terraform/azure/_scripts && ./apply.sh mysql cloudstgdev",
    "azure:destroy:mysql": "cd ./terraform/azure/_scripts && ./destroy.sh mysql cloudstgdev",
    "azure:execute:mysql": "yarn azure:setup && yarn azure:prepare:mysql && yarn azure:apply:mysql",
    "azure:tear:mysql": "yarn azure:destroy:mysql && yarn azure:cleanup:mysql",
    "azure:cicle:mysql": "yarn azure:execute:mysql && yarn azure:tear:mysql",


    "azure:prepare:gw": "cd ./terraform/azure/_scripts && ./prepare.sh gw cloudstgdev",
    "azure:apply:gw": "cd ./terraform/azure/_scripts && ./apply.sh gw cloudstgdev",
    "azure:destroy:gw": "cd ./terraform/azure/_scripts && ./destroy.sh gw cloudstgdev",
    "azure:execute:gw": "yarn azure:setup && yarn azure:prepare:gw && yarn azure:apply:gw",
    "azure:tear:gw": "yarn azure:destroy:gw && yarn azure:cleanup:gw",
    "azure:cicle:gw": "yarn azure:execute:gw && yarn azure:tear:gw",

    "az:setup": "cd ./tf/azure/_scripts && ./setup.sh teststgdev centralus",
    "az:prepare:rg": "cd ./tf/azure/_scripts && ./prepare.sh crg teststgdev",
    "az:apply:rg": "cd ./tf/azure/_scripts && ./apply.sh crg teststgdev",
    "az:execute:rg": "yarn az:prepare:rg && yarn az:apply:rg",

    "az:prepare:vnet": "cd ./tf/azure/_scripts && ./prepare.sh vnet teststgdev",
    "az:apply:vnet": "cd ./tf/azure/_scripts && ./apply.sh vnet teststgdev",
    "az:execute:vnet": "yarn az:prepare:vnet && yarn az:apply:vnet",

    "az:prepare:vm": "cd ./tf/azure/_scripts && ./prepare.sh vm teststgdev",
    "az:apply:vm": "cd ./tf/azure/_scripts && ./apply.sh vm teststgdev",
    "az:execute:vm": "yarn az:prepare:vm && yarn az:apply:vm",

    "az:prepare:apim": "cd ./tf/azure/_scripts && ./prepare.sh apim teststgdev",
    "az:apply:apim": "cd ./tf/azure/_scripts && ./apply.sh apim teststgdev",
    "az:execute:apim": "yarn az:prepare:apim && yarn az:apply:apim",

    "az:prepare:dep": "cd ./tf/azure/_scripts && ./prepare.sh depl teststgdev",
    "az:apply:dep": "cd ./tf/azure/_scripts && ./apply.sh depl teststgdev",

    "az:apply:all": "yarn az:setup && yarn az:execute:rg && yarn az:execute:vnet && yarn az:execute:vm"
  }
}
