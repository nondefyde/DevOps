{
  "name": "stemuli-devops",
  "version": "1.0.0",
  "author": "Emmanuel Okafor",
  "description": "The comprehensive repository for stemuli devOps",
  "homepage": "https://github.com/STEMuli-Tx/STEMuli-DevOps#readme",
  "keywords": [
    "Devops"
  ],
  "license": "ISC",
  "scripts": {
    "clean": "rm -rf ./terraform/_state && rm -rf ./terraform/.terraform",
    "build": "yarn clean && cd ./terraform && terraform init",
    "setup": "cd ./terraform/_scripts && ./setup.sh stmxlocal",
    "deploy": "cd ./terraform/_scripts && ./deploy.sh stmxlocal stmxlocalacr.azurecr.io/devops/html-server:latest test.voomsway.com html-server 8000",
    "prepare": "cd ./terraform/_scripts && ./prepare.sh stmxlocal",
    "apply": "cd ./terraform/_scripts && ./apply.sh stmxlocal",
    "destroy": "cd ./terraform/_scripts && ./destroy.sh stmxlocal",
    "execute": "yarn setup && yarn prepare && yarn apply && yarn deploy",

    "azure:clean": "rm -rf ./terraform/azure/_state && rm -rf ./terraform/azure/**/.terraform",
    "azure:cleanup": "cd ./terraform/azure/_scripts && ./cleanup.sh localdevops",
    "azure:setup": "cd ./terraform/azure/_scripts && ./setup.sh localdevops",
    "azure:prepare": "cd ./terraform/azure/_scripts && ./prepare.sh vm localdevops",
    "azure:apply": "cd ./terraform/azure/_scripts && ./apply.sh vm localdevops",
    "azure:destroy": "cd ./terraform/azure/_scripts && ./destroy.sh vm localdevops",
    "azure:execute": "yarn azure:setup && yarn azure:prepare && yarn azure:apply",
    "azure:tear": "yarn azure:destroy && yarn azure:cleanup",
    "azure:cicle": "yarn azure:execute && yarn azure:tear"
  }
}
