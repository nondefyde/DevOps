{
  "name": "stemuli-devops",
  "version": "1.0.0",
  "author": "Emmanuel Okafor",
  "description": "The comprehensive repository for stemuli devOps",
  "homepage": "https://github.com/STEMuli-Tx/STEMuli-DevOps#readme",
  "keywords": [
    "Devops"
  ],
  "license": "ISC",
  "scripts": {
    "clean": "rm -rf ./terraform/_state && rm -rf ./terraform/.terraform",
    "build": "yarn clean && cd ./terraform && terraform init",
    "setup": "cd ./terraform/_scripts && ./setup.sh stmxlocal",
    "deploy": "cd ./terraform/_scripts && ./deploy.sh stmxlocal stmxlocalacr.azurecr.io/devops/html-server:latest test.voomsway.com html-server 8000",
    "prepare": "cd ./terraform/_scripts && ./prepare.sh stmxlocal",
    "apply": "cd ./terraform/_scripts && ./apply.sh stmxlocal",
    "destroy": "cd ./terraform/_scripts && ./destroy.sh stmxlocal",
    "execute": "yarn setup && yarn prepare && yarn apply && yarn deploy",

    "azure:clean": "rm -rf ./terraform/azure/_state && rm -rf ./terraform/azure/**/.terraform",
    "azure:cleanup": "cd ./terraform/azure/_scripts && ./cleanup.sh localstgops",
    "azure:setup": "cd ./terraform/azure/_scripts && ./setup.sh localstgops",
    "azure:prepare": "cd ./terraform/azure/_scripts && ./prepare.sh vm localstgops",
    "azure:apply": "cd ./terraform/azure/_scripts && ./apply.sh vm localstgops",
    "azure:destroy": "cd ./terraform/azure/_scripts && ./destroy.sh vm localstgops",
    "azure:execute": "yarn azure:setup && yarn azure:prepare && yarn azure:apply",
    "azure:tear": "yarn azure:destroy && yarn azure:cleanup",
    "azure:cicle": "yarn azure:execute && yarn azure:tear",

    "aws:clean": "rm -rf ./terraform/aws/_state && rm -rf ./terraform/azure/**/.terraform",
    "aws:setup": "cd ./terraform/aws/_scripts && ./setup.sh localstgops",
    "aws:prepare": "cd ./terraform/aws/_scripts && ./prepare.sh kube localstgops",
    "aws:apply": "cd ./terraform/aws/_scripts && ./apply.sh kube localstgops",
    "aws:destroy": "cd ./terraform/aws/_scripts && ./destroy.sh kube localstgops",
    "aws:execute": "yarn aws:setup && yarn aws:prepare && yarn aws:apply",
    "aws:tear": "yarn aws:destroy",
    "aws:cicle": "yarn aws:execute && yarn aws:tear",
    "aws:permission": "cd ./terraform/aws/kube && kubectl apply -f eks-console-full-access.yaml"
  }
}
